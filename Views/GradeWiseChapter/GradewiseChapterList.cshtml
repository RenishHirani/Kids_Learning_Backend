@model DataTable
@using System.Data;

@{
    ViewData["Title"] = "Gradewise Chapter List";
}

<div class="container mt-4">
    <div class="mb-3">
        <a asp-action="TableList" asp-controller="Home" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-book-open"></i> Gradewise Chapter List</h2>
        <a asp-action="AddEditGradewiseChapter" asp-controller="GradewiseChapter" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Gradewise Chapter
        </a>
    </div>

    @if (Model.Rows.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">Gradewise Chapter ID</th>
                        <th>Grade ID</th>
                        <th>Grade Name</th>
                        <th>Chapter ID</th>
                        <th>Chapter Name</th>
                        <th>Sequence</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td class="text-center">@row["GradewiseChapterID"]</td>
                            <td>@row["GradeID"]</td>
                            <td>@row["GradeName"]</td>
                            <td>@row["ChapterID"]</td>
                            <td>@row["ChapterName"]</td>
                            <td>@row["Sequence"]</td>

                            <td class="text-center">
                                <a asp-action="AddEditGradewiseChapter" asp-route-GradewiseChapterID="@row["GradewiseChapterID"]" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="GradewiseChapterDelete" asp-route-GradewiseChapterID="@row["GradewiseChapterID"]" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No gradewise chapters available.
        </div>
    }
</div>
