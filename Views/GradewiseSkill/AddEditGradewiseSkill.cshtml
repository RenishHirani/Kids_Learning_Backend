@model GradeWiseSkillModel

@{
    ViewData["Title"] = Model.GradeWiseSkillID == 0 ? "Add Grade-wise Skill" : "Edit Grade-wise Skill";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-pen"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="GradewiseSkillSave" asp-controller="GradewiseSkill" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="GradeWiseSkillID" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Grade</label>
                    <select class="form-control" asp-for="GradeID">
                        <option value="">Select Grade</option>
                        @foreach (var grade in ViewBag.GradeList)
                        {
                            <option value="@grade.GradeID">@grade.GradeName</option>
                        }
                    </select>
                    <span asp-validation-for="GradeID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Skill</label>
                    <select class="form-control" asp-for="SkillID">
                        <option value="">Select Skill</option>
                        @foreach (var skill in ViewBag.SkillList)
                        {
                            <option value="@skill.SkillID">@skill.SkillName</option>
                        }
                    </select>
                    <span asp-validation-for="SkillID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Chapter</label>
                    <select class="form-control" asp-for="ChapterID">
                        <option value="">Select Chapter</option>
                        @foreach (var chapter in ViewBag.ChapterList)
                        {
                            <option value="@chapter.ChapterID">@chapter.ChapterName</option>
                        }
                    </select>
                    <span asp-validation-for="ChapterID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Sequence</label>
                    <input type="number" asp-for="Sequence" class="form-control" placeholder="Enter sequence number" required>
                    <span asp-validation-for="Sequence" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="GradewiseSkillList" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Grade-wise Skill
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
