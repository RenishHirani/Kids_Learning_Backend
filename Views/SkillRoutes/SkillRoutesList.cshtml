@model DataTable
@using System.Data;

@{
    ViewData["Title"] = "Skill-Routes Skill List";
}

<div class="container mt-4">
    <div class="mb-3">
        <a asp-action="TableList" asp-controller="Home" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-lightbulb"></i> Skill-Routes Skill List</h2>
        <a asp-action="AddEditSkillRoute" asp-controller="SkillRoutes" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Skill-Routes
        </a>
    </div>

    @if (Model.Rows.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">SkillRoutes ID</th>
                        <th>Controller Name</th>
                        <th>Action Name</th>
                        <th>Skill ID</th>
                        <th>Skill Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td class="text-center">@row["SkillRoutesID"]</td>
                            <td>@row["ControllerName"]</td>
                            <td>@row["ActionName"]</td>
                            <td>@row["SkillID"]</td>
                            <td>@row["SkillName"]</td>
                            <td class="text-center">
                                <a asp-action="AddEditSkillRoute" asp-route-SkillRoutesID="@row["SkillRoutesID"]" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="SkillRouteDelete" asp-route-SkillRoutesID="@row["SkillRoutesID"]" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No grade-wise skills available.
        </div>
    }
</div>
