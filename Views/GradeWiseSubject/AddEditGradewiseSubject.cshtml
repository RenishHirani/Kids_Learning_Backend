@model GradeWiseSubjectModel

@{
    ViewData["Title"] = Model.GradewiseSubjectID == 0 ? "Add Gradewise Subject" : "Edit Gradewise Subject";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-pen"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="GradewiseSubjectSave" asp-controller="GradewiseSubject" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="GradewiseSubjectID" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Grade ID</label>
                    <select class="form-control" asp-for="GradeID">
                        <option value="">Select Grade</option>
                        @foreach (var grade in ViewBag.GradeList)
                        {
                            <option value="@grade.GradeID">@grade.GradeName</option>
                        }
                    </select>                    
                    <span asp-validation-for="GradeID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Subject ID</label>
                    <select class="form-control" asp-for="SubjectID">
                        <option value="">Select Subject</option>
                        @foreach (var subject in ViewBag.SubjectList)
                        {
                            <option value="@subject.SubjectID">@subject.SubjectName</option>
                        }
                    </select>                    
                    <span asp-validation-for="SubjectID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="GradewiseSubjectList" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Gradewise Subject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
